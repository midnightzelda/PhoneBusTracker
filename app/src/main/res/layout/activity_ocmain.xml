<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OCTranspoApp.OCMain">

    <android.support.v7.widget.Toolbar
        android:id="@+id/oc_toolbar"
        android:background="@color/red"
        android:elevation="5dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />



    <FrameLayout
            android:layout_height="280dp"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/infoFrame">
    </FrameLayout>
    <Button
        android:id="@+id/oc_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/search"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="16dp" />

    <ProgressBar
        android:id="@+id/oc_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="192dp"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:id="@+id/oc_editText"
        android:layout_width="404dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/oc_stop_hint"
        android:text="" />

    <Button
        android:id="@+id/oc_favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:hint="@string/oc_bus_hint"
        android:text="@string/favourite" />


</GridLayout>