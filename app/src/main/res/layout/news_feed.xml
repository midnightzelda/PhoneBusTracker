<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/borderbox">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="24sp"
        android:text="Title"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@+id/news_deleteButton"
        />
    <Button
        android:id="@+id/news_deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/news_gobutton" />
    <Button
        android:id="@+id/news_gobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_goto"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>